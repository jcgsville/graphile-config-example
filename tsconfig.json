{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "rootDir": "src",
    "declarationDir": "./dist",
    "outDir": "./dist",

    // Inspired by https://www.totaltypescript.com/tsconfig-cheat-sheet#the-package
    // but with a few extra options, especially around strictness, and then all
    // redundant options versus @tsconfig/node22 removed.
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
